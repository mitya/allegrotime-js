<% conf = htmlWebpackPlugin.options %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
  <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
  <meta http-equiv="Content-Security-Policy" content="default-src * gap://ready; style-src * blob: 'self' 'unsafe-inline'; script-src * 'self' 'unsafe-inline' 'unsafe-eval'; img-src * 'self' data:;">
  <meta content="telephone=no" name="format-detection" />
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <title>AllegroTime</title>

  <link rel="icon" type="image/png" sizes="144x144" href="images/favicon-144.png" >
  <% for (var css in htmlWebpackPlugin.files.css) { %>
  <link href="<%= conf.targetDir %><%= htmlWebpackPlugin.files.css[css] %>" rel="stylesheet">
  <% } %>
</head>

<body>
  <main id="application"></main>
  <div id='debug'></div>

  <script src="cordova.js"></script>

  <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
  <script src="<%= conf.targetDir %><%= htmlWebpackPlugin.files.chunks[chunk].entry %>"></script>
  <% } %>
</body>
</html>
